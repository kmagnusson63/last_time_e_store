<div id="cart">
  <ul>
    <% if session[:cart].size < 1 %>
	  <li class="cart_item">Cart is empty</li>
    <% else %>
      <% session[:cart].each do |product| %>
        <li class="cart_item">
          <%= @products[product.to_i].name %>
          <%= link_to "Remove", del_from_shopping_cart_path(:id => product), :method => :post %>
        </li>
      <% end %>
    <% end %>
  </ul>
  <p><%= link_to "Contents", shopping_cart_path, :method => :post %></p>
</div>