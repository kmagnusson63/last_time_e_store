<div id="content">
  <h2>Shopping Cart</h2>
  
  <% if session[:cart].empty? %>
    <p>Your cart is empty</p>
  <% else %>
    <table>
    <%= render 'shopping_cart_product' %>
    </table>
    <p><%= link_to "Confirm and enter order", confirm_shopping_cart_path, :method => :post %></p>
  <% end %>
</div>