<div id="content">
  <h2>Confirm & Order</h2>
  
  <% if session[:cart].empty? %>
    <p>Your cart is empty</p>
  <% else %>
    <table>
      <%= render 'shopping_cart_product' %>
      <%= render 'order_confirm_entry' %>
      <tr>
      	<td colspan="4">
      	  <%= link_to 'This is the link to to confirm and place order.', order_path %>
      	</td>
      </tr>
    </table>
   
  <% end %>
  
  <%= @line_item_products.inspect %>
</div>